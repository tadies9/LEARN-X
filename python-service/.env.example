# Application Configuration
APP_NAME=learnx-ai-service
APP_ENV=development
APP_PORT=8001
APP_HOST=0.0.0.0
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/learnx
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# PGMQ Configuration
PGMQ_POLL_INTERVAL=5
PGMQ_VISIBILITY_TIMEOUT=300
PGMQ_MAX_RETRIES=3
PGMQ_BATCH_SIZE=10

# AI/ML Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIMENSIONS=1536
OPENAI_MAX_BATCH_SIZE=50

# Local Model Configuration (Optional)
ENABLE_LOCAL_MODELS=false
LOCAL_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
LOCAL_LLM_MODEL=llama2:7b
OLLAMA_BASE_URL=http://localhost:11434

# Processing Configuration
MAX_CHUNK_SIZE=1500
MIN_CHUNK_SIZE=200
CHUNK_OVERLAP=100
ENABLE_SEMANTIC_CHUNKING=true
ENABLE_NLP_ENHANCEMENT=true

# Worker Configuration
WORKER_CONCURRENCY=4
WORKER_HEARTBEAT_INTERVAL=30
WORKER_SHUTDOWN_TIMEOUT=30

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090