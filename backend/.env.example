# LEARN-X Backend Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/learnx
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Python AI Service Configuration (REQUIRED for AI features)
PYTHON_AI_SERVICE_URL=http://localhost:8001
PYTHON_AI_SERVICE_TIMEOUT=60000
PYTHON_AI_SERVICE_MAX_RETRIES=3

# AI Provider API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key  # Optional, for Claude models
LOCAL_MODELS_PATH=/path/to/local/models    # Optional, for local LLM models

# Application Configuration
NODE_ENV=development
PORT=3001
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# Security
JWT_SECRET=your-jwt-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn  # Optional, for error tracking
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
AI_RATE_LIMIT_MAX_REQUESTS=20

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=pdf,txt,docx,md

# Cache Configuration
CACHE_TTL=3600  # 1 hour
AI_CACHE_TTL=7200  # 2 hours
ENABLE_CACHE=true

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_PERSONALIZATION=true
ENABLE_STREAMING=true
ENABLE_BATCH_PROCESSING=true
ENABLE_LOCAL_MODELS=false  # Set to true when local models are configured

# Performance Tuning
MAX_CONCURRENT_AI_REQUESTS=10
BATCH_PROCESSING_SIZE=5
QUEUE_POLL_INTERVAL=5000

# Development & Testing
ENABLE_API_DOCS=true
ENABLE_DEBUG_ROUTES=false
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/learnx_test

# Production Overrides (uncomment for production)
# NODE_ENV=production
# LOG_LEVEL=warn
# ENABLE_REQUEST_LOGGING=false
# ENABLE_DEBUG_ROUTES=false
# ENABLE_API_DOCS=false